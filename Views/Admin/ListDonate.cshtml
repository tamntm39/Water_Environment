@model IEnumerable<Water_Environment.Models.Custom.DonateItem>

@{
    ViewBag.Title = "ListDonate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Danh sách ủng hộ</h2>
 
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped text-center" id="myTable">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Người ủng hộ</th>
                    <th scope="col">Nội dung</th>
                    <th scope="col">Số tiền ủng hộ</th>
                    <th scope="col">Trạng thái</th>
                    <th></th>`
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.donate.DonateId</td>
                        <td>@item.userNameDonate</td>
                        <td>@item.donate.Content</td>
                        <td> @string.Format("{0:0,00}", @item.donate.MoneyDonate)</td>
                        <td>
                            @if (@item.donate.IsDonateSuccess == true)
                            {
                                <span>✅</span>
                            }
                            else
                            {
                                <span>❌</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="modal fade" id="ModalEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ModelTitle">New message</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3 d-none">
                                <label for="category-id" class="col-form-label">ID:</label>
                                <input type="text" class="form-control" id="category-id">
                            </div>
                            <div class="mb-3">
                                <label for="category-name" class="col-form-label">Tên loại:</label>
                                <input type="text" class="form-control" id="category-name">
                            </div>
                            <div class="mb-3">
                                <label for="category-active" class="col-form-label">Kích hoạt:</label>
                                <input class="form-control-input" type="checkbox" id="category-active" checked>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-primary" onclick="SaveInfo()">Lưu lại</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

